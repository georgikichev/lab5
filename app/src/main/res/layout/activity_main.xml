<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gogo.lab05.MainActivity">

    <Button
        android:text="Activity 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/launchActivity3"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/launchActivity2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:onClick="launch3 (MainActivity)" />

    <Button
        android:text="Browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/launchBrowser"
        android:layout_alignTop="@+id/launchActivity3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:onClick="launchBrowser (MainActivity)" />

    <Button
        android:text="Activity 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="129dp"
        android:id="@+id/launchActivity2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="launch2 (MainActivity)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/displayResults"
        android:layout_below="@+id/launchGeo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:visibility="invisible" />

    <TextView
        android:text="Push button for Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructions"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Geo Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/launchGeo"
        android:onClick="launchMaps (MainActivity)"
        android:layout_below="@+id/launchBrowser"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
